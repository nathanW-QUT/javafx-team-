<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="group13.demo1.controller.AccomplishmentController">

<left>
    <fx:include source="Sidebar.fxml"/>
</left>

<center>
    <VBox spacing="20" alignment="TOP_CENTER">

        <Label text="Accomplishments"/>

        <HBox spacing="10" alignment="CENTER">
            <TextField fx:id="accomplishmentLabel">Enter New Accomplishment</TextField>
            <Button text="Add" onAction="#addAccomplishment"/>
        </HBox>

        <Label fx:id="statusLabel" textFill="#bb9dd0"/>
        <ListView fx:id="accomplishmentList" VBox.vgrow="ALWAYS"/>
    </VBox>
</center>
</BorderPane>
