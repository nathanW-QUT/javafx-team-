<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="group13.demo1.controller.AccomplishmentController">

    <left>
        <fx:include source="Sidebar.fxml"/>
    </left>

    <center>
        <VBox spacing="10" alignment="TOP_CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="Manage your Accomplishments" styleClass="title-label"/>

            <VBox spacing="10" alignment="CENTER" styleClass="input-section">
                <HBox spacing="10">
                    <TextField fx:id="accomplishmentLabel" promptText="Enter a new accomplishment" prefWidth="300"/>
                    <Button text="Add" onAction="#addAccomplishment" styleClass="primary-button"/>
                </HBox>

                <HBox spacing="10">
                    <Button text="Update" onAction="#updateAccomplishment" styleClass="secondary-button"/>
                    <Button text="Delete" onAction="#deleteAccomplishment" styleClass="secondary-button"/>
                </HBox>

                <Label fx:id="statusLabel" style="-fx-text-fill: green"/>
            </VBox>

            <VBox spacing="10" alignment="CENTER" VBox.vgrow="ALWAYS">
                <Label text="Recent Entries" styleClass="section-title"/>
                <ListView fx:id="accomplishmentList" prefHeight="200" prefWidth="400" styleClass="accomplishment-list" VBox.vgrow="ALWAYS"/>
            </VBox>

        </VBox>
    </center>
</BorderPane>
