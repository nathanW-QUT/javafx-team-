<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import group13.demo1.controller.CountdownController?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="group13.demo1.controller.CountdownController">

    <!-- left sidebar -->
    <left>
        <fx:include source="Sidebar.fxml"/>
    </left>

    <!-- center countdown UI -->
    <center>
        <VBox alignment="CENTER" spacing="20">
            <Label text="Countdown Timer" style="-fx-font-size:20px;"/>

            <!-- input fields for minutes / seconds -->
            <HBox alignment="CENTER" spacing="10">
                <TextField fx:id="inputMinutes" promptText="Minutes" prefWidth="80"/>
                <TextField fx:id="inputSeconds" promptText="Seconds" prefWidth="80"/>
            </HBox>

            <!-- live countdown label -->
            <Label fx:id="countdownLabel" text="00:00" style="-fx-font-size:28px;"/>

            <!-- buttons -->
            <HBox alignment="CENTER" spacing="15">
                <Button fx:id="startPauseButton" text="Start" onAction="#startPause"/>
                <Button fx:id="resetButton" text="Reset" onAction="#reset"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
