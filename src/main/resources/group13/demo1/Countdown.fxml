<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import group13.demo1.controller.CountdownController?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="group13.demo1.controller.CountdownController">

    <left>
        <fx:include source="Sidebar.fxml"/>
    </left>

    <center>
        <VBox alignment="CENTER" spacing="30" styleClass="colorBackground">

            <!-- Header Section -->
            <HBox alignment="CENTER" styleClass="header-bar">
                <Label text="Countdown Dashboard" styleClass="title-label"/>
            </HBox>

            <!-- Countdown Section -->
            <VBox alignment="CENTER" spacing="20" styleClass="content-box" maxWidth="300">

                <!-- Welcome Text -->
                <HBox alignment="CENTER">
                    <Label fx:id="welcomeText" text="Set your countdown below" styleClass="welcome-text"/>
                </HBox>

                <!-- Input Fields -->
                <HBox alignment="CENTER" spacing="10">
                    <TextField fx:id="inputMinutes" promptText="Minutes" prefWidth="80" styleClass="input-field"/>
                    <TextField fx:id="inputSeconds" promptText="Seconds" prefWidth="80" styleClass="input-field"/>
                </HBox>

                <!-- Countdown Display -->
                <HBox alignment="CENTER">
                    <Label fx:id="countdownLabel" text="00:00" style="-fx-font-size: 28px;" styleClass="section-title"/>
                </HBox>

                <!-- Control Buttons -->
                <HBox alignment="CENTER" spacing="15">
                    <Button fx:id="startPauseButton" text="Start" onAction="#startPause" styleClass="button"/>
                    <Button fx:id="resetButton" text="Reset" onAction="#reset" styleClass="button"/>
                </HBox>

                <!-- Status Info -->
                <HBox alignment="CENTER">
                    <Label fx:id="statusLabel" text="" styleClass="label"/>
                </HBox>

            </VBox>
        </VBox>
    </center>
</BorderPane>