<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="group13.demo1.controller.GraphsController">
    <stylesheets>
        <URL value="@graphstyle.css"/>
    </stylesheets>

    <left>
        <fx:include source="Sidebar.fxml"/>
    </left>

    <center>
        <StackPane>
            <VBox spacing="22" alignment="TOP_CENTER" maxWidth="1100">
                <padding>
                    <Insets top="24" right="24" bottom="24" left="24"/>
                </padding>

                <Label text="Insights" style="-fx-font-size: 26px; -fx-font-weight: bold;"/>

                <!-- Weekly bar chart -->
                <VBox spacing="6" alignment="TOP_LEFT" prefWidth="1000">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="Counts per day (Monâ€“Sun)"
                               style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                        <Button fx:id="refreshBtn" text="Refresh"/>
                    </HBox>
                    <BarChart fx:id="comboBar" animated="false" legendVisible="true"
                              prefWidth="1000" prefHeight="360">
                        <xAxis>
                            <CategoryAxis fx:id="dayAxis" label="Day of week"/>
                        </xAxis>
                        <yAxis>
                            <NumberAxis fx:id="countAxis" label="Count" forceZeroInRange="true"/>
                        </yAxis>
                    </BarChart>
                    <Label fx:id="noteLabel" visible="false"
                           style="-fx-font-size: 12px; -fx-text-fill: derive(-fx-accent,-20%);"/>
                </VBox>

                <!-- Pie: Main Distraction tags (cause) -->
                <VBox spacing="8" alignment="TOP_LEFT" prefWidth="1000">
                    <Label text="Main Distraction Tags"
                           style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                    <PieChart fx:id="tagPie" legendVisible="false" labelsVisible="true"
                              prefWidth="600" prefHeight="340"/>
                </VBox>

                <HBox alignment="CENTER_LEFT" prefWidth="1000">
                    <Button fx:id="backBtn" text="Back" onAction="#onBackHome"/>
                </HBox>
            </VBox>

            <Label fx:id="emptyState"
                   visible="false"
                   text="No data to visualize yet."
                   style="-fx-font-size: 18px; -fx-text-fill: #ffffff; -fx-opacity: 0.9; -fx-font-weight: bold;"/>
        </StackPane>
    </center>
</BorderPane>
