<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="group13.demo1.controller.TaskController">

    <left>
        <fx:include source="Sidebar.fxml"/>
    </left>

    <center>
        <VBox spacing="20" alignment="TOP_CENTER">
            <HBox spacing="10" alignment="CENTER_RIGHT" prefWidth="600">
                <Label text="Tasks" styleClass="title-label" HBox.hgrow="ALWAYS"/>
                <Button fx:id="nextButton" text="+ Create Task" onAction="#onCreateTaskPage" prefWidth="120" />
            </HBox>

            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" maxWidth="600">
                <TilePane fx:id="tasksTilePane" hgap="10" vgap="10" prefColumns="3" />
            </ScrollPane>
        </VBox>
    </center>
</BorderPane>