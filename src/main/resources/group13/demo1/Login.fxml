<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="group13.demo1.controller.Login">


    <center>
        <VBox spacing="15" alignment="CENTER" maxWidth="300">
            <TextField fx:id="usernameField" promptText="Username" />
            <PasswordField fx:id="passwordField" promptText="Password" />
            <Label fx:id="statusLabel"/>
            <Button text="Login" onAction="#handleLogin" />
        </VBox>
    </center>


    <bottom>
        <BorderPane >
            <left>
                <Button fx:id="nextButton" text="Back" onAction="#onClickLogOut" />
            </left>

            <right>
                <HBox>
                    <Button text="Change Password" onAction="#onClickEditPassword" />
                    <Button text="Delete Account" onAction="#onDeleteAccount" fx:id="DeleteAccount" />

                </HBox>

            </right>
        </BorderPane>
    </bottom>

</BorderPane>
