<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="group13.demo1.controller.TimerHistory">

    <center>
        <VBox spacing="10" style="-fx-padding: 18;">
            <TabPane tabClosingPolicy="UNAVAILABLE">
                <!--TIMER SESSIONS -->
                <Tab text="Timer sessions">
                    <BorderPane>
                        <left>

                            <ListView fx:id="sessionList" prefWidth="360"/>
                        </left>
                        <center>
                            <VBox spacing="12" style="-fx-padding: 10;">
                                <Label text="Timer Sessions" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

                                <Label fx:id="totalsession" text="Total Sessions: 0"/>

                                <Label fx:id="totalTime" text="Total Distracted Time: 0s"/>
                                <Separator/>
                                <Label text="Selected session:" style="-fx-font-size: 12px; -fx-text-fill: -fx-accent;"/>

                                <Label fx:id="session" wrapText="true"/>
                                <HBox spacing="10" style="-fx-padding: 10 0 0 0;">

                                    <Button text="Clear selection" onAction="#onConfirm"/>
                                    <Button text="Delete" onAction="#onDelete"/>
                                </HBox>
                            </VBox>
                        </center>
                    </BorderPane>
                </Tab>

                <!-- DISTRACTION HISTORY -->
                <Tab text="Distraction history">
                    <BorderPane>
                        <left>
                            <ListView fx:id="mdList" prefWidth="420"/>
                        </left>
                        <center>
                            <VBox spacing="12" style="-fx-padding: 10;">
                                <Label text="Logged Distractions (main)" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                                <Label fx:id="mdTotalLabel" text="Total Records: 0"/>
                                <Separator/>
                                <Label text="Selected:" style="-fx-font-size: 12px; -fx-text-fill: -fx-accent;"/>
                                <Label fx:id="mdDetail" wrapText="true"/>
                            </VBox>
                        </center>
                    </BorderPane>
                </Tab>
            </TabPane>

            <HBox alignment="CENTER_RIGHT" style="-fx-padding: 6 0 0 0;">
                <Button text="Back" onAction="#onBackHome"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
