<?xml version="1.0" encoding="UTF-8"?>
<?import java.net.URL?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="group13.demo1.controller.TimerHistory"
            styleClass="history-page">



    <left>
        <fx:include source="Sidebar.fxml"/>
    </left>


    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">

            <!-- TIMER SESSIONS -->
            <Tab text="Timer sessions">
                <BorderPane>

                    <left>
                        <ListView fx:id="sessionList" prefWidth="360" BorderPane.alignment="CENTER"/>
                    </left>

                    <center>
                        <VBox spacing="12" style="-fx-padding: 10;">
                            <Label text="Timer Sessions" styleClass="heading"/>

                            <Label fx:id="totalsession" text="Total Sessions: 0"/>
                            <Label fx:id="totalTime" text="Total Focus Time: 0s"/>

                            <Separator/>

                            <Label text="Selected session:"/>

                            <Label fx:id="session" visible="false" managed="false"/>

                            <GridPane hgap="16" vgap="10" styleClass="info-card">
                                <columnConstraints>
                                    <ColumnConstraints minWidth="120" halignment="RIGHT"/>
                                    <ColumnConstraints hgrow="ALWAYS"/>
                                </columnConstraints>

                                <Label text="Date:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                <Label fx:id="DateValue" text="—" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                                <Label text="Start:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                <Label fx:id="StartValue" text="—" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                                <Label text="End:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                <Label fx:id="EndValue" text="—" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                                <Label text="Focus time:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                                <Label fx:id="FocusTimeValue" text="—" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                                <Label text="Paused:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                                <Label fx:id="PausedTimeValue" text="—" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                                <Label text="Pause count:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                                <Label fx:id="PauseCountValue" text="—" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                            </GridPane>

                            <HBox spacing="10" style="-fx-padding: 10 0 0 0;">
                                <Button text="Clear selection" onAction="#onConfirm"/>
                                <Button fx:id="deleteButton" text="Delete" onAction="#onDelete"/>
                            </HBox>
                        </VBox>
                    </center>
                </BorderPane>
            </Tab>

            <!-- DISTRACTION HISTORY -->
            <Tab text="Distraction history">
                <BorderPane>

                    <left>
                        <ListView fx:id="mdList" prefWidth="420" BorderPane.alignment="CENTER"/>
                    </left>

                    <center>
                        <VBox spacing="12" style="-fx-padding: 10;">
                            <Label text="Logged Distractions (main)" styleClass="heading"/>
                            <Label fx:id="mdTotalLabel" text="Total Records: 0"/>
                            <Separator/>

                            <Label fx:id="mdDetail" visible="false" managed="false"/>

                            <GridPane hgap="16" vgap="10" styleClass="info-card">
                                <columnConstraints>
                                    <ColumnConstraints minWidth="140" halignment="RIGHT"/>
                                    <ColumnConstraints hgrow="ALWAYS"/>
                                </columnConstraints>

                                <Label text="Reason:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                <Label fx:id="mdReason" text="—" wrapText="true"
                                       GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                                <Label text="When:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                <Label fx:id="mdWhenTimeValue" text="—"
                                       GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                                <Label text="Duration:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                <Label fx:id="mdMinutesValue" text="—"
                                       GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                                <Label text="Notes:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                                <Label fx:id="mdNotes" text="—" wrapText="true"
                                       GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                            </GridPane>
                        </VBox>
                    </center>
                </BorderPane>
            </Tab>
        </TabPane>
    </center>
</BorderPane>
