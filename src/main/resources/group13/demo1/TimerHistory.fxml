<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="group13.demo1.controller.TimerHistory">


    <left>
        <ListView fx:id="list" prefWidth="260"/>
    </left>


    <center>
        <VBox spacing="12" alignment="TOP_LEFT" style="-fx-padding: 20;">
            <Label text="Timer History" style="-fx-font-size: 15px; -fx-font-weight: bold;"/>


            <Label fx:id="totalsession" text="Total Timer Sessions: 0"/>
            <Label fx:id="totalTime" text="Total Distracted Time: 0s"/>

            <Separator/>
            <Label text="Selected:"/>
            <Label fx:id="selectedHeader"
                   text="Id  -  Distraction Tag  -  Start time  â†’  End time  -  Time Spent"
                   style="-fx-font-size: 11px; -fx-text-fill: white;"/>
            <Label fx:id="session" style="-fx-font-weight: bold;"/>
            <HBox spacing="10" style="-fx-padding: 10 0 0 0;">
                <Button text="Confirm" onAction="#onConfirm"/>
                <Button text="Delete"  onAction="#onDelete"/>
            </HBox>
        </VBox>
    </center>


    <bottom>
        <HBox alignment="CENTER_RIGHT" style="-fx-padding: 8 12 12 12;">
            <Button text="Back" onAction="#onBackHome"/>
        </HBox>
    </bottom>
</BorderPane>
