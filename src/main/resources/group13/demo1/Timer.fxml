<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import group13.demo1.controller.TimerController?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="group13.demo1.controller.TimerController">
    <left>
    <fx:include source="Sidebar.fxml"/>
</left>


    <!-- Center stopwatch -->
    <center>
        <VBox alignment="CENTER" spacing="20">

            <Label fx:id="timerLabel" text="00:00" style="-fx-font-size: 28px;"/>

            <HBox alignment="CENTER" spacing="15">
                <Button fx:id="startStopButton" text="Start" onAction="#toggleStartStop"/>
                <Button fx:id="resetButton" text="Reset" onAction="#resetTimer"/>
            </HBox>

            <Button fx:id="nextButton" text="Log Distraction" onAction="#onClickLogDistraction"/>
        </VBox>
    </center>
</BorderPane>
