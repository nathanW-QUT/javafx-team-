<!--                <Button fx:id="QuickButton" text="Log Distraction" onAction="#onClickLogDistraction"/>-->
<!--                <Label fx:id="distractionStatus" text=""/>-->
<!--            </VBox>-->

        </VBox>
        </VBox>
    </center>
</BorderPane>
