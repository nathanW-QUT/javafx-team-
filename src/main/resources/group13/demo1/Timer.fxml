<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import group13.demo1.controller.TimerController?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="group13.demo1.controller.TimerController">
    <left>
    <fx:include source="Sidebar.fxml"/>
</left>

    <!-- Center stopwatch -->
    <center>
        <VBox alignment="CENTER" spacing="30" styleClass="colorBackground">

        <!-- Header Section -->
        <HBox alignment="CENTER" styleClass="header-bar">
            <Label text="Timer Dashboard" styleClass="title-label"/>
        </HBox>

        <!-- Stopwatch Section -->
        <VBox alignment="CENTER" spacing="20" styleClass="content-box" maxWidth="300">

            <!-- Welcome Text -->
            <HBox alignment="CENTER">
                <Label fx:id="welcomeText" styleClass="welcome-text"/>
            </HBox>

            <!-- Timer Display -->
            <HBox alignment="CENTER">
                <Label fx:id="timerLabel" text="00:00" style="-fx-font-size: 28px;" styleClass="section-title"/>
            </HBox>

            <!-- Control Buttons -->
            <HBox alignment="CENTER" spacing="15">
                <Button fx:id="startStopButton" text="Start" onAction="#toggleStartStop" styleClass="button"/>
                <Button fx:id="resetButton" text="Reset" onAction="#resetTimer" styleClass="button"/>
            </HBox>

            <!-- Pause Info -->
            <HBox alignment="CENTER">
                <Label fx:id="pauseTimeLabel" text="Total Pause: 00:00" styleClass="label"/>
            </HBox>

            <!--The Quick Distraction feature from Must Haves has been removed based on negative user feedback on multiple 'Distraction-logging-mechanics'-->
